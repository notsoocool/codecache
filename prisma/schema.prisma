generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Snippet {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  language      String
  code          String
  description   String?
  tags          String[]
  category      String
  difficulty    String
  usage         String
  bookmarkedBy  String[]
  averageRating Int           @default(0)
  submittedBy   String
  createdAt     DateTime      @default(now())
  status        SnippetStatus @default(PENDING)

  ratings Rating[]
}

model Rating {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int
  userId    String
  snippetId String   @db.ObjectId
  createdAt DateTime @default(now())

  Snippet Snippet @relation(fields: [snippetId], references: [id], onDelete: Cascade)
}

enum SnippetStatus {
  PENDING
  APPROVED
  REJECTED
}
